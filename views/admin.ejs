      <header>
        <div id='cssmenu'>
            <ul>
              <li><a href='/createRestaurant'>Create Restaurant</a></li>
              <li class='active'><a href='/admin'>View All Reservations</a></li>
              <li><a href='/login'>Logout</a></li>
            </ul>
        </div>
        <h1><%= title %></h1>
      </header>
      
      <body>
          <div id='cssmenu'>
              <% if(allReservations.length > 0){ %>
              <table class = 'table'>
                <thead>
                  <th>Reservation ID</th>
                  <th>Restaurant Name</th>
                  <th>Branch</th>
                  <th>Meal</th>
                  <th>Date</th>
                  <th>Customer</th>
                  <th>Status</th>
                  <th>Delete</th>
                </thead>
                <tbody>
                  <% for(var i=0; i < allReservations.length; i++){ %>
                    <tr>
                        <td><%= allReservations[i].reservationid %></td>
                        <td><%= allReservations[i].restaurantname %></td>
                        <td><%= allReservations[i].brancharea %></td>
                        <td><%= allReservations[i].mealtypename %></td>
                        <td><%= allReservations[i].date %></td>
                        <td><%= allReservations[i].customeremail %></td>
                        <td><%= allReservations[i].statustext %></td>
                      <td>
                        <form id="removeReservation" action="" method="POST">
                            <input type="hidden" name=reservationToDeleteId value="<%=allReservations[i].reservationid%>">
                            <input type="hidden" name=flag value="remove">
                            <button id="button" class="btn btn-lg btn-danger" value="remove"
                              type="submit">Delete</button>
                        </form>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
              </table>
              <% }else{ %>
                <p style="color: tomato">No Reservations Recorded</p>    
              <% } %>
          </div>
        </body>
      
