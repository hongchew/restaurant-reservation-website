    <header>
      <div id='cssmenu'>
          <ul>
            <li><a href='/listRestaurant'>Search Restaurant</a></li>
            <li class='active'><a href='/userInfo'>Reservation Record</a></li>
            <li><a href='/bookmark'>Bookmark</a></li>
            <li><a href='/login'>Logout</a></li>
          </ul>
      </div>
      <h1><%=title%></h1>
    </header>
    
    <body>
    
    <div id='cssmenu'>
        <form method="POST">
        <table class='table' >
            <tr>
                <th>Reservation ID</th>
                <td><%=editReservation[0].reservationid%></td>
            </tr>
            <tr>
                <th>Restaurant Name</th>
                <td><%=editReservation[0].restaurantname%></td>
            </tr>
            <tr>
                <th>Branch</th>
                <td><%=editReservation[0].brancharea%></td>
            </tr>
            <tr>
                <th>Meal</th>
                <td>
                    <% if(editReservation[0].openinghour <1000){ %>
                        <input type="radio" name="updatedMealType" value="breakfast"/> Breakfast<br>
                    <%} %>
                    <% if(editReservation[0].closinghour > 1200){ %>
                        <input type="radio" name="updatedMealType" value="lunch"/> Lunch<br>
                    <%} %>
                    <% if(editReservation[0].closinghour > 1900){ %>
                        <input type="radio" name="updatedMealType" value="dinner"/> Dinner<br>
                    <%} %>
                </td>
            </tr>
            <tr>
                <th>Date</th>
                <td>
                    <input type="date" name="updatedDate" placeholder="<%=editReservation[0].vacancydate%>"/>
                </td>
            </tr>
            <tr>
                <th>Number of Diners</th>
                <td>
                    <input type="number" name="updatedNumDiner" placeholder="<%=editReservation[0].numdiner%>"/>
                </td>
            </tr>
            <tr>
                <th></th>
                <td>
                    <input type="hidden" name="id" value="<%= editReservation[0].reservationid %>" />
                    <button id="button" class="btn btn-primary" value="View" type="submit">Confirm Edit</button>
                </td>
            </tr>
        </table>
        </form>
    </div>
    
    </body>
</html>